name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Input artifact from W&B project to use for basic cleaning
        type: str
      output_artifact:
        description: Output artifact that is producing out of the baisc_cleaing component
        type: str
      output_type:
        description: Type of the artifact i.e. cleaned dataset
        type: str
      output_description:
        description: Description of the output artifact
        type: str
      min_price:
        description: Minimum price allowed through dataset
        type: int
      max_price:
        description: Maximum price allowed through dataset
        type: int
    command: python main.py --input_artifact {input_artifact} --output_artifact {output_artifact} --output_type {output_type} --output_description {output_description} --min_price {min_price} --max_price {max_price}